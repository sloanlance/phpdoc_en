<refentry id="function.ps-save">
 <refnamediv>
  <refname>ps_save</refname>
  <refpurpose>Save current context</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>ps_save</methodname>
   <methodparam><type>resource</type><parameter>psdoc</parameter></methodparam>
  </methodsynopsis>
  <para>
   Saves the current graphics context, containing colors, translation and
   rotation settings and some more. A save context can be restored with
   <function>ps_restore</function>.
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ps_restore</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

