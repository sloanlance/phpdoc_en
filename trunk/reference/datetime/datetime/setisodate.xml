 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Finding the date from a week number and day offset</title>
   <programlisting role="php">
<![CDATA[
<?php
$date = new DateTime();

$date->setISODate(2008, 2);
echo $date->format('Y-m-d') . "\n";

$date->setISODate(2008, 2, 1);
echo $date->format('Y-m-d') . "\n";

$date->setISODate(2008, 2, 7);
echo $date->format('Y-m-d') . "\n";

// Values exceeding ranges are added to their parent values.
$date->setISODate(2008, 2, 8);
echo $date->format('Y-m-d') . "\n";
?>
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
2008-01-07
2008-01-07
2008-01-13
2008-01-14
]]>
   </screen>
  </example>
  <example>
   <title>Finding the month a week is in</title>
   <programlisting role="php">
<![CDATA[
<?php
$date = new DateTime();
$date->setISODate(2008, 14);
echo $date->format('n');  // 3
?>
]]>
   </programlisting>
  </example>
 </refsect1>

