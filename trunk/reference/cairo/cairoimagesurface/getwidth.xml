<refentry xml:id="cairoimagesurface.getwidth" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>CairoImageSurface::getWidth</refname>
  <refpurpose>Retrieves the width of the CairoImageSurface</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>integer</type><methodname>CairoImageSurface::getWidth</methodname>
   <void />
  </methodsynopsis>
  <para>
   Gets the width of the <classname>CairoImageSurface</classname>
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the width of the CairoImageSurface object
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><methodname>CairoImageSurface::getWidth</methodname>() example</title>
    <programlisting role="php">
<![CDATA[
<?php
// creates a new image surface
$surface = new CairoImageSurface(CairoFormat::ARGB32, 80, 50);

//gets the width
var_dump($surface->getWidth());

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
int(80)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>CairoImageSurface::getHeight</methodname>()</member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

