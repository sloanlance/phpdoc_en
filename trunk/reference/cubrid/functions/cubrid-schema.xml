 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>cubrid_schema</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php
$attrs = cubrid_schema ($con, CUBRID_SCH_ATTRIBUTE, "person");
while (list($key, $value) = each($attrs)) {
   echo $value["NAME"];
   echo $value["DOMAIN"];
}
?>
]]>
   </programlisting>
  </example>
 </refsect1>

