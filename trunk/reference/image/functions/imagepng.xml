 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <informalexample>
    <programlisting role="php">
<![CDATA[
<?php
$im = imagecreatefrompng("test.png");
imagepng($im);
?>
]]>
    </programlisting>
   </informalexample>
  </para>
 </refsect1>
