 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>str_ireplace</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$bodytag = str_ireplace("%body%", "black", "<body text=%BODY%>");
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

