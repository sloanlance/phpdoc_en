  <refentry id="function.ircg-lookup-format-messages">
   <refnamediv>
    <refname>ircg_lookup_format_messages</refname>
    <refpurpose>
     Select a set of format strings for display of IRC messages
    </refpurpose>
   </refnamediv>
   <refsect1>
